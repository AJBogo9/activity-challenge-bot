{
  "name": "summer-body-bot",
  "version": "1.0.0",
  "description": "A Telegram bot for tracking competition scores among Aalto guilds and teams.",
  "main": "index.ts",
  "scripts": {
    "start": "bun index.ts",
    "dev": "bun --watch index.ts",
    "populate": "bun scripts/populateTestData.ts",
    "clear": "bun scripts/clear.ts",
    "pod:dev": "podman-compose up",
    "pod:logs": "podman logs -f summer-body-bot",
    "pod:populate": "podman exec -it summer-body-bot bun scripts/populateTestData.ts",
    "pod:clear": "podman exec -it summer-body-bot bun scripts/clear.ts",
    "pod:up": "podman-compose up -d --build",
    "pod:down": "podman-compose down",
    "pod:restart": "podman restart summer-body-bot",
    "pod:shell": "podman exec -it summer-body-bot sh",
    "pod:test": "podman exec -it summer-body-bot bun test",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint --max-warnings=-1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EppuRuotsalainen/summer-body-bot.git"
  },
  "keywords": [
    "telegram",
    "telegram-bot",
    "telegraf",
    "telegraf-bot",
    "telegraf-wizards",
    "telegraf-scenes",
    "nodejs",
    "mongodb",
    "mongoose",
    "bot"
  ],
  "author": "Eppu Ruotsalainen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EppuRuotsalainen/summer-body-bot/issues"
  },
  "homepage": "https://github.com/EppuRuotsalainen/summer-body-bot#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "fuse.js": "^7.1.0",
    "postgres": "^3.4.7",
    "telegraf": "^4.16.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.4",
    "@types/node": "^25.0.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}