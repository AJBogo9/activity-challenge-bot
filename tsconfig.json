{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*",
    "index.ts",
    "scripts/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}